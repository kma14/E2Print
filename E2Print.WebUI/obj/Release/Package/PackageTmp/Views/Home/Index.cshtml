    <!-- ====================================
    ———	PACKAGES SECTION
    ===================================== -->
    <section class="py-10">
        <div class="container">
            <div class="text-center section-title">
                <h2 class="text-uppercase font-weight-bold position-relative">
                    <span class="bg-white">
                        Our Products / Services
                    </span>
                </h2>
                <p class="text-capitalize text-center">Your one stop business solution</p>
            </div>

            <div id="filters" class="button-group">
                @foreach (E2Print.Domain.Entities.Tag tag in (List<E2Print.Domain.Entities.Tag>)ViewData["PromotionTags"])
                {
                    <button class="button " data-filter=@("."+tag.Name.ToLower())>@tag.Name</button>
                }
            </div>

            <div class="row grid">
                @foreach (Promotion promotion in Model)
                {
                    <div class="col-md-6 col-lg-4 element-item @promotion.PromotionGroup.ToLower()">
                        <div class="media media-hoverable justify-content-center mb-2 mb-md-4 mb-lg-6">
                            <a href="single-package-fullwidth.html" class="media-content">
                                <img class="media-img" src=@("/Content/Images/Promotions/" + promotion.Id.ToString() + "_0.jpg") alt="Generic placeholder image">
                                <div class="media-object">
                                    <h3 class="text-uppercase mb-0 transparent-content">@promotion.Title</h3>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
