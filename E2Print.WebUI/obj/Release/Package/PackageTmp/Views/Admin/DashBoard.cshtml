
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    ViewBag.Title = "Admin Dashboard";
}



<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Minton</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
            <h4 class="page-title">Welcome !</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card-box">
            <div class="float-left" dir="ltr">
                <input data-plugin="knob" data-width="70" data-height="70" data-fgColor="#1abc9c"
                       data-bgColor="rgba(112, 129, 146,0.2)" value="@ViewBag.ProductCount""
                       data-skin="tron" data-angleOffset="0" data-readOnly=true
                       data-thickness=".25" data-max="1500" />
            </div>
            <div class="text-right">
                <h3 class="mb-1"> @ViewBag.ProductCount </h3>
                <p class="text-muted mb-1">Products</p>
            </div>
        </div>
    </div><!-- end col -->

    <div class="col-xl-3 col-md-6">
        <div class="card-box">
            <div class="float-left" dir="ltr">
                <input data-plugin="knob" data-width="70" data-height="70" data-fgColor="#3bafda"
                       data-bgColor="rgba(112, 129, 146,0.2)" value="@ViewBag.CategoryCount"
                       data-skin="tron" data-angleOffset="0" data-readOnly=true
                       data-thickness=".25" data-max="50"/>
            </div>
            <div class="text-right">
                <h3 class="mb-1">@ViewBag.CategoryCount </h3>
                <p class="text-muted mb-1">Categories</p>
            </div>
        </div>
    </div><!-- end col -->
</div>



@section scripts{
}

