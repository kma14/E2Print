@model E2Print.Domain.Entities.Customer

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="generalContent">
    <h1>Create your E2print account</h1>
    @using (Html.BeginForm("CreateCustomer", "Customer"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="dataEntry-group">
            <div class="column-small">
                @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "dataEntry-label" })
                @Html.TextBoxFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="column-small">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "dataEntry-label" })
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="dataEntry-group">
            <div class="column-small">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "dataEntry-label" })
                @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <hr class="solid" />
        <div class="dataEntry-group">
            <div class="column-small">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "dataEntry-label" })
                @Html.TextBoxFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="column-small">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "dataEntry-label" })
                @Html.TextBoxFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="dataEntry-group">
            <div class="column-small">
                @Html.LabelFor(model => model.Company, htmlAttributes: new { @class = "dataEntry-label" })
                @Html.TextBoxFor(model => model.Company, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="column-small">
                @Html.LabelFor(model => model.ContactNumber, htmlAttributes: new { @class = "dataEntry-label" })
                @Html.TextBoxFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="dataEntry-group">
            <div class="column-small">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "dataEntry-label" })
                @Html.TextBoxFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="dataEntry-group">
        </div>
        <div class="dataEntry-group">

            @*<div class="column-small">
                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "dataEntry-label" })
                    @Html.TextBoxFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                </div>*@
        </div>


        <div class="dataEntry-group">
        </div>

        <div class="dataEntry-group">

        </div>
        <hr class="solid" />
        <div class="dataEntry-group">
            <div class="column-small">
                <button type="reset">Reset</button>
                <button type="submit">Submit</button>
            </div>
        </div>
    }
</div>
