
@{
    ViewBag.Title = "Edit Tag";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model  E2Print.Domain.Entities.Tag

@section styles{
    <style>
        .progress {
            border-radius: 0px;
            background-color: #f0f0f0;
            height: 18px;
        }

        .progress-bar {
            height: 18px;
            background-color: #0da9ef;
            margin-bottom:10px;
        }

        input#file {
            display: none;
        }

        img.currentPhoto {
            cursor: pointer !important;
        }

        .photoList {
            list-style: none;
            margin: 0;
            padding: 0;
        }

            .photoList > li {
                text-wrap: none;
                overflow: visible;
                padding: 7px 10px;
                background-color: #ffffff;
                cursor: pointer;
                width:100%;
            }

                .photoList > li:hover .deletePhoto {
                    display: inline-block;
                }

                .photoList > li.currentPhoto {
                    background-color: #495561;
                    color:#000000;
                }

        .deletePhoto {
            float:right;
            margin-right:1em;
        }

            .deletePhoto:hover {
                color: red;
            }
        .newPhoto{
            font-weight:bold;
        }
    </style>
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Admin">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/Tag/Tags">Tags</a></li>
                    <li class="breadcrumb-item active">Edit Tag</li>
                </ol>
            </div>
            <h4 class="page-title">Edit Tag "@Model.Type > @Model.Name"</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-12">
        <div class="card-box">

            <div class="row">
                <div class="col-12">
                    <div class="p-2">
                        @using (Html.BeginForm("Update", "Tag", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-group row">
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <label class="col-sm-2 col-form-label">Tag group</label>
                                <div class="col-sm-10">
                                    <input type="text" name="Type" id="Type" class="form-control" value="@Model.Type">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="simpleinput">Title</label>
                                <div class="col-sm-10">
                                    <input type="text" name="Name" id="Name" class="form-control" value="@Model.Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" for="Description">Description</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" name="Description" id="Description" rows="5">@Model.Description</textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <button type="submit" class="btn btn-primary">Update Tag</button>
                            </div>
                        }
                    </div>
                </div>

            </div>
            <!-- end row -->

        </div> <!-- end card-box -->
    </div><!-- end col -->
</div>
<!-- end row -->



@section scripts
{
    <script src="~/Scripts/jquery.form.min.js"></script>
    <script type="text/javascript">
    </script>
}
